<LoginScreen>:
    name: 'tela_de_login'
    md_bg_color: 0, 0, 0, 1
    FloatLayout:
        
        Image:
            source: 'imagem.png'
            size_hint: (0.75, 0.75)
            pos_hint: {'center_x': 0.47, 'center_y': 0.75}
        MDLabel:
            text: 'Login'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            halign: 'center'
            bold: True
            font_size: dp(21)
            pos_hint: {'center_x': 0.2, 'center_y': 0.5 }
        MDTextField:
            mode: 'round'
            hint_text: 'Email'
            icon_right: 'mail'
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        MDTextField:
            mode: 'round'
            hint_text: 'Senha'
            icon_right: 'lock'
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        MDFillRoundFlatButton:
            text: 'Entrar'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            size_hint_x: .8
            elevation:0
            on_release: 
                root.manager.current = 'tela_principal'
                root.manager.transition.direction = 'left'
        MDTextButton:
            text: 'Ainda não tem uma conta? [u]Cadastre-se.[/u]'
            bold: True
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            markup: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.09}
            font_size: dp(10)
            size_hint_x: .8
            on_release: 
                root.manager.current = 'tela_de_cadastro'
                root.manager.transition.direction = 'left'

